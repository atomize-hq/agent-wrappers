+impl Drop for JsonRpcTransport {
+    fn drop(&mut self) {
+        for handle in &self.tasks {
+            handle.abort();
+        }
+
+        if let Ok(mut child_guard) = self.child.try_lock() {
+            if let Some(mut child) = child_guard.take() {
+                let _ = child.start_kill();
+            }
+        }
+    }
+}
